DROP TABLE IF EXISTS `user_bbs`;
SET character_set_client = utf8mb4 ;
/*建表时NOT NULL啥的有待商榷*/
CREATE TABLE `user_bbs` (
                            `user_id` int(11) NOT NULL AUTO_INCREMENT COMMENT '用户ID',
                            `user_name` varchar(50) DEFAULT NULL,
                            `password` varchar(50) DEFAULT '',
                            `email` varchar(100) DEFAULT NULL,
    /*使用-128，+128的tinyInt来表示用户的状态*/
                            `user_type` TINYINT  DEFAULT 0  COMMENT '0-普通用户; 1-超级管理员; 2-版主;',
                            `status` TINYINT   DEFAULT 0 COMMENT '0-未激活; 1-已激活;',
                            `credit` int(11) DEFAULT NULL COMMENT '积分',
                            `create_time` timestamp NULL DEFAULT NULL,
                            PRIMARY KEY (`user_id`),
    /*建立索引 暂时还没学到*/
                            KEY `index_username` (`user_name`(20)),
                            KEY `index_email` (`email`(20))
) ENGINE=InnoDB AUTO_INCREMENT=101 DEFAULT CHARSET=utf8;