<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ch.chMbTest.repository.RoleMapper">
    <!--整一个role专属的映射map-->
    <resultMap id="roleMap" type="Role">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="enabled" column="enabled"
                typeHandler="com.ch.chMbTest.type.EnabledTypeHandler"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectRoleById" resultMap="roleMap">
        select * from role0329
         where id = #{id}
    </select>
    
    <!--role整合了权限list的map-->
    <!--基于结果映射-->
    <resultMap id="rolePrivilegeListMap" extends="roleMap" type="Role">
        <!--使用collection标签将list加入映射-->
        <collection property="privilegeList" columnPrefix="privilege_"
                    resultMap="com.ch.chMbTest.repository.PrivilegeMapper.privilegeMap"/>
    </resultMap>

    <!--role整合了权限list的map-->
    <!--基于嵌套查询 区别就在collection的写法不同-->
    <resultMap id="rolePrivilegeListMapSelect" type="Role" extends="roleMap">
        <!--来一个子查询-->
        <!--{id=id}中 等号前面的是形参 等号后面的是要传入的role的id -->
        <collection property="privilegeList" column="{id=id}"
                    select="com.ch.chMbTest.repository.PrivilegeMapper.selectPrivilegeByRoleId"
                    fetchType="lazy"
        />

    </resultMap>

    <!--第二个子查询 根据用户id查找角色-->
    <select id="selectRoleByUserId" resultMap="rolePrivilegeListMapSelect" >
        select r.*
        from role0329 r
        join user_role0329 ur on ur.role_id=r.id
        where ur.user_id=#{id}
    </select>




</mapper>